@article{10.3389/fimmu.2019.02522,
  title = {Immunological Paradigms, Mechanisms, and Models: Conceptual Understanding Is a Prerequisite to Effective Modeling},
  shorttitle = {Immunological Paradigms, Mechanisms, and Models},
  author = {Grossman, Zvi},
