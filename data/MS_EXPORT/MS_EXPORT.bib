  author = {{Lerma-Martin}, Celia and {Badia-i-Mompel}, Pau and Flores, Ricardo O. Ramirez and Sekol, Patricia and Sch{\"a}fer, Philipp S. L. and Riedl, Christian J. and Hofmann, Annika and Th{\"a}wel, Thomas and others and {Ibarra-Arellano}, Miguel A. and Trobisch, Tim and Eisele, Philipp and Schapiro, Denis and Haeussler, Maximilian and Hametner, Simon and {Saez-Rodriguez}, Julio and Schirmer, Lucas}
