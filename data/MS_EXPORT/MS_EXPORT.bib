@article{10.1038/s41586-021-03892-7,
  title = {A Lymphocyte--Microglia--Astrocyte Axis in Chronic Active Multiple Sclerosis},
  author = {Absinta, Martina and Maric, Dragan and Gharagozloo, Marjan and Garton, Thomas and Smith, Matthew D. and Jin, Jing and Fitzgerald, Kathryn C. and Song, Anya and Liu, Poching and Lin, Jing-Ping and Wu, Tianxia and Johnson, Kory R. and McGavern, Dorian B. and Schafer, Dorothy P. and Calabresi, Peter A. and Reich, Daniel S.},
