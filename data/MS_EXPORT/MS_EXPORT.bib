@article{10.1172/jci86198,
  title = {Persistent 7-Tesla Phase Rim Predicts Poor Outcome in New Multiple Sclerosis Patient Lesions},
  author = {Absinta, Martina and Sati, Pascal and Schindler, Matthew and Leibovitch, Emily C. and Ohayon, Joan and Wu, Tianxia and Meani, Alessandro and Filippi, Massimo and Jacobson, Steven and Cortese, Irene C.M. and Reich, Daniel S.},
